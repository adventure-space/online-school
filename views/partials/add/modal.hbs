<div id="modal_add" class="modal hide">
    {{!-- <div id="modal_add" class="modal"> --}}
        <div class="wrapper">
            <div class="header">
                <h3>Создание Задачи</h3>
            </div>

            <div class="content">
                {{!-- 1 этап --}}
                <form ref='uploadForm' encType="multipart/form-data" method="post" id="file_upload" action="/upload">
                    <div class="add_photo" id="add_photo_block">
                        {{>buttons/media}}
                        <h4>Выберите фото</h4>
                            <p><input id="add_photo" type="file" name="image" multiple accept="image/*,image/jpeg">
                                <input type="hidden" value="" name="comment" id="comment_data">
                                <input id="add_submit1" type="submit" value="Загрузить изображение">
                            </p>
                    </div>

                    {{!-- 2 этап --}}
                    <div id="add_description" class="add_description">
                        <img src="" id="add_image">
                            <input name="name" class="default" type="text" placeholder="Имя задачи">
                            <textarea id="add_comment" name="add_comment" placeholder="Описание задачи..."></textarea>
                            <input name="answer" class="default" type="text" placeholder="Ответ">
                            <input id="add_submit2" type="submit" value="Сохранить">
                    </div>
                </form>
            </div>
        </div>
    </div>